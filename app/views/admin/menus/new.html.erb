<% content_for :content_for do %>
    <ol class="breadcrumb">
      <li><a href="#">预约菜单管理</a></li>
      <li class="active">新增</li>
    </ol>

    <div class="add_agent">
      <%= form_for @category, url: admin_menus_path do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control", id: "exampleInputEmail1", placeholder: "名称" %>
            <!--<%#= f.text_field　:name, class: "form-control", id: "exampleInputEmail1", placeholder: "用户名" %>-->
          </div>
          <div class="form-group">
            <%= f.select :category_type, Category.category_type_options, class: "form-control", id: "exampleInputEmail1"%>
          </div>

          <div class="form-group">
            <%= f.text_area :description, class: "form-control", id: "exampleInputEmail1", placeholder: "描述" %>
          </div>

          <button type="submit" class="btn btn-default">提交</button>
      <% end %>
    </div>
<% end %>