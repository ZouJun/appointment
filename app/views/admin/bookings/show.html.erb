<% content_for :content_for do %>
    <ol class="breadcrumb">
      <li><a href="#">预约管理</a></li>
      <li class="active">分配</li>
    </ol>

    <div class="add_agent">
      <%= form_for @order, url: admin_booking_path(@order), method: :put do |f| %>
          <div class="form-group">
            <%= f.select :agent_id, Agent.all.map{|t| [t.name, t.id]}, {include_blank: '请选择代理商'}, class: "form-control", id: "exampleInputEmail1" %>
          </div>
          <button type="submit" class="btn btn-default">提交</button>
      <% end %>
    </div>
<% end %>